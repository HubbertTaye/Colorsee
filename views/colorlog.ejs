<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Colorsee</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <!-- div to style buttons layout -->
    <div class="">
      <!-- will change to nav icon -->
      <button type="button" name="activatePg">
        <a href="/activate">Color Picker</a>
      </button>
      <!-- button to redirect to make palettes page -->
      <button type="button" name="mkPalettes">Create New Palette</button>
      <!-- button to redirect to palette gallery page -->
      <button type="button" name="paletteGal">To Palette Gallery</button>
    </div>

    <!-- display list of colors user saved from dom -->
    <ul>
      <% for(var i=0; i<colors.length; i++) {%>
      <li>
        <span><style>.preview{width:40px;height:40px;background:<%=colors[i].rgb%>}</style><div class="preview"></div></span>
        <span><%= colors[i].alias %></span>
        <span><%= colors[i].hex %></span>
        <span><%= colors[i].rgb %></span>
        <span><i class="fas fa-backspace"></i></span>
      </li>
      <%}%>
    </ul>
  </body>
</html>
